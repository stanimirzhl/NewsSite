@using NewsSite.Models.ViewModels
@{
    ViewData["Title"] = "Създаване на категория";
}
@model CategoryVM
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Създайте нова категория</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Create" enctype="multipart/form-data" method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <label asp-for="Name" class="col-form-label p-lg-2">Заглавие:</label>
                    <input type="text" asp-for="Name" class="form-control border-0 shadow" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Description" class="col-form-label p-lg-2">Описание:</label>
                    <textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <button asp-controller="Category" asp-action="Create" class="btn btn-primary">Създай</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Върни се обратно</a>
            </div>
        </form>
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

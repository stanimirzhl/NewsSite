@using NewsSite.Models.ViewModels
<h2>Смяна на парола</h2>
@model SettingsVM
@if (TempData["Success"] != null)
{
    <div class="alert alert-primary mb-4">
        @TempData["Success"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-4">
        @TempData["Error"]
    </div>
}
<div class="row m-4">
    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10">
        <form method="post" class="p-4 shadow rounded" asp-action="ChangePassowrd">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="@Model.ChangePassword.OldPassword" class="form-label">Стара парола:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    <input asp-for="@Model.ChangePassword.OldPassword" class="form-control" aria-required="true" />
                </div>
                <span asp-validation-for="@Model.ChangePassword.OldPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.ChangePassword.NewPassword" class="form-label">Нова парола:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    <input asp-for="@Model.ChangePassword.NewPassword" type="password" class="form-control" aria-required="true" />
                </div>
                <span asp-validation-for="@Model.ChangePassword.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.ChangePassword.NewPasswordConfirm" class="form-label">Потвърждение на новата парола:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    <input asp-for="@Model.ChangePassword.NewPasswordConfirm" type="password" class="form-control" aria-required="true" />
                </div>
                <span asp-validation-for="@Model.ChangePassword.NewPasswordConfirm" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger" href="@Url.Action("Profile", "Account", new {section = Model.Section})">Смяна на парола</button>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script href="~/Scripts/jquery.unobtrusive*"></script>
    <script href="~/Scripts/jquery.validate*"></script>
}
